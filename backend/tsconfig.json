{
    "compilerOptions": {
      "module": "NodeNext",
      "outDir": "dist",
      "sourceMap": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "target": "ES2020",
      "allowJs": true,
      "resolveJsonModule": true,
      "moduleDetection": "force",
      "isolatedModules": true,
      "verbatimModuleSyntax": true,
      "noUncheckedIndexedAccess": true,
    }
    ,
    "include": ["src/**/*"],
  }